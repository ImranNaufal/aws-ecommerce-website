{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce Backend API with AWS Integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "seed": "node scripts/seed-database.js",
    "migrate": "node scripts/migrate-database.js",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "logs": "pm2 logs ecommerce-api",
    "monitor": "pm2 monit",
    "stop": "pm2 stop ecommerce-api",
    "restart": "pm2 restart ecommerce-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "aws-sdk": "^2.1419.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "stripe": "^12.12.0",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "winston-cloudwatch": "^6.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "@types/jest": "^29.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!ecosystem.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ecommerce",
    "api",
    "aws",
    "dynamodb",
    "s3",
    "cloudwatch",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
